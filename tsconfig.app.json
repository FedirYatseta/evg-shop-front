{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/config/*.ts",
    "src/config/*.json",
    "src/**/*.ts",
    "src/services/*.ts",
    "src/store/*.ts",
    "src/**/*.d.ts",
    "src/mixins/*.ts",
    "src/hooks/*.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "composite": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
